{
  "name": "azure-service-bus-manager",
  "version": "1.0.0",
  "description": "Desktop application for managing Azure Service Bus queues, topics, and subscriptions",
  "author": "Fabien",
  "main": "build/electron.js",
  "homepage": "./",
  "scripts": {
    "start": "craco start",
    "build": "craco build && cp electron/main.js build/electron.js",
    "test": "craco test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-dev": "PORT=3001 concurrently \"npm start\" \"wait-on http://localhost:3001 && electron .\"",
    "build-electron": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --publish=never",
    "dist:all": "npm run build && electron-builder --mac --win --linux --publish=never",
    "release": "npm run build && electron-builder --publish=always",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@azure/service-bus": "^7.9.5",
    "classnames": "^2.3.2",
    "electron-updater": "^6.1.4",
    "lucide-react": "^0.263.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.1",
    "react-scripts": "5.0.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@craco/craco": "^7.1.0",
    "@types/uuid": "^9.0.2",
    "autoprefixer": "^10.4.14",
    "buffer": "^6.0.3",
    "concurrently": "^8.2.0",
    "crypto-browserify": "^3.12.0",
    "electron": "^25.3.1",
    "electron-builder": "^24.6.3",
    "electron-is-dev": "^2.0.0",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "postcss": "^8.4.24",
    "process": "^0.11.10",
    "stream-browserify": "^3.0.0",
    "tailwindcss": "^3.3.2",
    "util": "^0.12.5",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.azureservicebus.manager",
    "productName": "Azure Service Bus Manager",
    "artifactName": "${productName}-${version}.${ext}",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "package.json",
      "!node_modules/**/README.md",
      "!node_modules/**/CHANGELOG.md",
      "!node_modules/**/*.d.ts",
      "!node_modules/**/*.map"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets",
        "filter": [
          "**/*"
        ]
      }
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "fabien",
        "repo": "azure-service-bus-emulator"
      }
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.icns",
      "artifactName": "${productName}-${version}-mac.${ext}",
      "target": [
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico",
      "publisherName": "Azure Service Bus Manager"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        },
        {
          "target": "rpm",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.png",
      "category": "Development"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Azure Service Bus Manager"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
